{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "es2018",
		"types": ["vitest/globals"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/tests"]
}
