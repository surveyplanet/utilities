{
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/tests/**/*.ts", "./dist"],
	"compilerOptions": {
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"target": "es2020",
		"rootDir": "./",
		"outDir": "dist",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": false
	}
}
