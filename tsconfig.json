{
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/tests/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2020", "dom", "dom.iterable"],
		"module": "commonjs",
		"target": "es2020",
		"rootDir": "./",
		"outDir": "build",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true
	}
}
