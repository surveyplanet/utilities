{
	"name": "@surveyplanet/utilities",
	"version": "0.0.0",
	"license": "UNLICENSED",
	"homepage": "https://github.com/surveyplanet/utilities",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/cjs/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git@github.com:surveyplanet/utilities.git"
	},
	"engines": {
		"node": ">= 16",
		"npm": ">= 8"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"build:esm": "tsc --project tsconfig.esm.json",
		"build": "rm -rf dist && npm run build:cjs && npm run build:esm",
		"clean": "rm -rf dist coverage .nyc_output",
		"format": "prettier \"src/**/*.ts\" --check",
		"lint": "eslint src --ext .ts",
		"check": "./bin/preflight.sh",
		"release:dry": "semantic-release --dry-run",
		"release": "semantic-release",
		"spell": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"test": "vitest run",
		"type": "tsc --noEmit",
		"type:dts": "tsc --emitDeclarationOnly"
	},
	"devDependencies": {
		"@ryansonshine/commitizen": "^4.2.8",
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/github": "^9.2.6",
		"@semantic-release/npm": "^11.0.2",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@surveyplanet/publish": "^2.0.0-beta.1",
		"@surveyplanet/types": "^1.0.0-alpha.44",
		"@types/jsdom": "^20.0.1",
		"@types/node": "^18.11.18",
		"@types/prompts": "^2.4.2",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"@vitest/coverage-c8": "^0.28.3",
		"c8": "^7.12.0",
		"cspell": "^6.19.2",
		"esbuild": "^0.17.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.27.5",
		"jsdom": "^21.1.2",
		"nyc": "^15.1.0",
		"prettier": "^2.8.3",
		"semantic-release": "^22.0.12",
		"typescript": "^4.9.4",
		"vitest": "^0.28.3"
	},
	"overrides": {}
}
